1- 
#include <stdio.h>

int main() {
    float num1, num2, divisao;

    printf("Digite o primeiro numero: ");
    scanf("%f", &num1);

    printf("Digite o segundo numero: ");
    scanf("%f", &num2);

    if (num2 != 0) {
        divisao = num1 / num2;
        printf("Resultado da divisao: %.2f\n", divisao);
    } else {
        printf("Erro: divisao por zero nao permitida.\n");
    }

    return 0;
}

2 - 
#include <stdio.h>

int main() {
    float num1, num2;

    printf("Digite o primeiro numero: ");
    scanf("%f", &num1);

    printf("Digite o segundo numero: ");
    scanf("%f", &num2);

    if (num1 > 0 && num2 > 0) {
        printf("Valores sao validos.\n");
    } else {
        printf("Valores invalidos.\n");
    }

    return 0;
}

3 - 
#include <stdio.h>

int main() {
    float salario, novoSalario;
    int cargo;

    printf("Digite o salario atual: ");
    scanf("%f", &salario);

    printf("Digite o cargo (1-Tecnico, 2-Gerente, 3-Outros): ");
    scanf("%d", &cargo);

    if (cargo == 1) {
        novoSalario = salario * 1.50;
    } else if (cargo == 2) {
        novoSalario = salario * 1.30;
    } else {
        novoSalario = salario * 1.20;
    }

    printf("Novo salario: %.2f\n", novoSalario);

    return 0;
}

4 - 
#include <stdio.h>

int main() {
    float num1, num2, resultado;
    char operacao;

    printf("Digite o primeiro numero: ");
    scanf("%f", &num1);

    printf("Digite o segundo numero: ");
    scanf("%f", &num2);

    printf("Digite a operacao (+, -, *, /): ");
    scanf(" %c", &operacao); // espa√ßo antes do %c para ignorar enter anterior

    switch (operacao) {
        case '+':
            resultado = num1 + num2;
            printf("Resultado: %.2f\n", resultado);
            break;
        case '-':
            resultado = num1 - num2;
            printf("Resultado: %.2f\n", resultado);
            break;
        case '*':
            resultado = num1 * num2;
            printf("Resultado: %.2f\n", resultado);
            break;
        case '/':
            if (num2 != 0) {
                resultado = num1 / num2;
                printf("Resultado: %.2f\n", resultado);
            } else {
                printf("Erro: divisao por zero nao permitida.\n");
            }
            break;
        default:
            printf("Operacao invalida.\n");
    }

    return 0;
}

